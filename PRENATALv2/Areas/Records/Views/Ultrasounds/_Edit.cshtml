                    @Html.ValidationMessageFor(Model => Model.HeadCircumference, "", new { @class = "text-danger" })
                </div>
                <div class="d-inline-block">
                    @Html.LabelFor(Model => Model.AbdominalCircumference, new { @class = "col-sm-12" })<br />
