                    @Html.CheckBoxFor(Model => Model.Movement, new { @class = "form-control" })<br />
                    @Html.ValidationMessageFor(Model => Model.Movement, "", new { @class = "text-danger" })
                </div>
                <div class="d-inline-block">
                    @Html.LabelFor(Model => Model.Length, new { @class = "col-sm-12" })<br />
