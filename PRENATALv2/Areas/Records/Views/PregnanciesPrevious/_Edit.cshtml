@using PRENATALv2.Areas.Records.Models
@model PregnanciesPreviousMR.Details

    <div class="container border-bottom">
        <h3><strong class="text-uppercase">Edit previous pregnancy</strong></h3>
        @using (Html.BeginForm("SaveExisting", "PregnanciesPrevious", FormMethod.Post, new { @class = "form-group" }))
        {

            @Html.AntiForgeryToken();
            <fieldset class="align-content-lg-around">

                @Html.HiddenFor(Model => Model.MedicalRecordId, new { @class = "d-none" })
                @Html.HiddenFor(Model => Model.Id, new { @class = "d-none" })
                <div class="d-inline-block">
                    @Html.LabelFor(Model => Model.PregnancyDate, new { @class = "col-sm-12" })<br />
                    @Html.EditorFor(Model => Model.PregnancyDate, new { htmlAttributes = new { @type = "date", @class = "datepicker form-control" } })<br />
                    @Html.ValidationMessageFor(Model => Model.PregnancyDate, "", new { @class = "text-danger" })
                </div>
                <div class="d-inline-block">
                    @Html.LabelFor(Model => Model.GestationWeeks, new { @class = "col-sm-12" })<br />
                    @Html.EditorFor(Model => Model.GestationWeeks, new { htmlAttributes = new { @class = "form-control" } })<br />
                    @Html.ValidationMessageFor(Model => Model.GestationWeeks, "", new { @class = "text-danger" })
                </div>
                <div class="d-inline-block">
                    @Html.LabelFor(Model => Model.DeliveryType, new { @class = "col-sm-12" })<br />
                    @Html.EditorFor(Model => Model.DeliveryType, new { htmlAttributes = new { @class = "form-control" } })<br />
                    @Html.ValidationMessageFor(Model => Model.DeliveryType, "", new { @class = "text-danger" })
                </div>
                <div class="d-inline-block">
                    @Html.LabelFor(Model => Model.Complications, new { @class = "col-sm-12" })<br />
                    @Html.EditorFor(Model => Model.Complications, new { htmlAttributes = new { @class = "form-control" } })<br />
                    @Html.ValidationMessageFor(Model => Model.Complications, "", new { @class = "text-danger" })
                </div>
                <div class="d-inline-block">
                    @Html.LabelFor(Model => Model.Outcome, new { @class = "col-sm-12" })<br />
                    @Html.DropDownListFor(Model => Model.Outcome, new SelectList(Model.Outcomes, "Value", "Text", Model.Outcome), "Select:", new { @class = "form-control" })<br />
                    @Html.ValidationMessageFor(Model => Model.Outcome, "", new { @class = "text-danger" })
                </div>

                <div class="d-inline">
                    <button id="edit_cancel" class="btn btn-small form-control">Cancel</button>
                    <input type="submit" class="btn btn-small form-control" value="Save" />
                </div>
            </fieldset>
        }
    </div>
<script>
    $('#edit_cancel').click(function () {
        $(this).parent().parent().parent().parent().parent().empty();
    });
</script>