@using PRENATALv2.Areas.Records.Models
@model VitalSignsMR.Details

    <div class="container border-bottom">
        <h3><strong class="text-uppercase">Edit vitalsign</strong></h3>
        @using (Html.BeginForm("SaveExisting", "VitalSigns", FormMethod.Post, new { @class = "form-group" }))
        {

            @Html.AntiForgeryToken();
            <fieldset class="align-content-lg-around">

